<%- include('includes/header', {title: "Login Page",navItemsPresent: true}); %>
<p class="text-danger bg-warning text-center py-2"><%= loginInputs?.errorMessage?.credentials %></p> 

<section class="container mx-auto login-section">   
    <form action="/login" 
    method="post"
    class="mx-auto">
    <input type="hidden" value="<%=locals.csrf%>" name="_csrf">
        <div class="form-floating mb-3">
            <input type="email" class="form-control"
             id="email" name="email" 
             placeholder="name@example.com"
             value="<%= loginInputs.email %>">
            <label for="email">Email address</label>

           
          </div>

          <p class="error-message"><%= loginInputs?.errorMessage?.email %></p> 
        <div class="form-floating">
            <input type="password" class="form-control"
             id="password" 
             name="password" 
             placeholder="Password"
             value="<%= loginInputs.password %>">
            <label for="password">Password</label>

            <p class="error-message"><%= loginInputs?.errorMessage?.password %></p> 
        </div>

        <div class="form-group mt-4 text-center">
            <button type="submit" class="btn btn-primary">
                Login
            </button>
        </div>

    </form>

</section>


  <%- include('includes/footer'); %>