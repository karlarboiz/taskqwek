<%- include('../includes/header', {title: "Project", navItemsPresent: false}); %>
    <%- include('../includes/sub-header'); %>
    <%- include('../dashboard/dashboard-sidebar',{role,activeLink}); %>
    
    <%- include("../section-template/top-section__template"); %>

        <!-- Modal -->
        <div class="modal fade" id="createProjectModal" tabindex="-1" aria-labelledby="createProjectModalLabel" >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title text-info font-weight-bold" id="createProjectModalLabel">Create Your Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="project-creation--loader-container" style="display: none;">
                        <div class="loader"></div>
                    </div>
                    <div class="modal-body text-left">
                        <form id="project-form" >
                            <input type="hidden" id="_csrf" name="_csrf" value="<%=locals.csrf%>">
                            <div class="mb-3 project-field--name project-field--group">
                                <label for="project-name" class="form-label text-info">Project Name</label>
                                <input type="text" class="form-control" id="project-name" placeholder="Enter project name">
                            </div>
                            <div class="mb-3 project-field--description  project-field--group">
                                <label for="project-description" class="form-label text-info">Description</label>
                                <textarea class="form-control" id="project-description" rows="3" placeholder="Enter project description"></textarea>
                            </div>
                            <div class="mb-3 project-field--deadline project-field--group">
                                <label for="project-deadline" class="form-label text-info">Deadline</label>
                                <div class="custom-date-picker">
                                    <div class="date-input-wrapper" id="date-input-wrapper">
                                        <input type="text" class="date-input" id="project-deadline" placeholder="Select deadline" readonly>
                                        <i class="fas fa-calendar-alt date-icon" id="date-icon"></i>
                                    </div>
                                    <div class="date-picker-dropdown" id="date-picker-dropdown" style="position: absolute; top: 100%; left: 0; right: 0; background: white; border: 2px solid #e1e5e9; border-radius: 8px; box-shadow: 0 8px 25px rgba(0,0,0,0.15); z-index: 9999; display: none; margin-top: 4px;">
                                        <div class="date-picker-header">
                                            <button type="button" class="date-picker-nav" id="prev-month">
                                                <i class="fas fa-chevron-left"></i>
                                            </button>
                                            <div class="date-picker-title" id="current-month-year"></div>
                                            <button type="button" class="date-picker-nav" id="next-month">
                                                <i class="fas fa-chevron-right"></i>
                                            </button>
                                        </div>
                                        <div class="date-picker-body">
                                            <div class="date-picker-weekdays">
                                                <div class="weekday">Sun</div>
                                                <div class="weekday">Mon</div>
                                                <div class="weekday">Tue</div>
                                                <div class="weekday">Wed</div>
                                                <div class="weekday">Thu</div>
                                                <div class="weekday">Fri</div>
                                                <div class="weekday">Sat</div>
                                            </div>
                                            <div class="date-picker-days" id="date-picker-days"></div>
                                        </div>
                                        <div class="date-picker-footer">
                                            <button type="button" class="date-picker-btn secondary" id="clear-date">Clear</button>
                                            <button type="button" class="date-picker-btn primary" id="today-date">Today</button>
                                        </div>
                                    </div>
                                </div>
                            
                            </div>
                            <div class="modal-footer">
                                <button type="reset" id="form-project--button-reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="save-changes">Save </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        
        <main class="row mt-4" id="project-list--container">
      
            <div class="col-md-3">
                <div class="card project-card add-project-card" data-bs-toggle="modal" data-bs-target="#createProjectModal">
                    <div class="card-body">+</div>
                </div>
            </div>
      
        </main>


    <%- include("../section-template/bottom-section__template"); %>
    
  </div>
</main>
    
<%- include('../includes/footer'); %>