<%- include('../includes/header', {title: "Project", navItemsPresent: false}); %>
    <%- include('../includes/sub-header'); %>
    <%- include('../dashboard/dashboard-sidebar',{role,activeLink}); %>
    
    <%- include("../section-template/top-section__template"); %>

        <!-- Modal -->
        <div class="modal fade" id="createProjectModal" tabindex="-1" aria-labelledby="createProjectModalLabel" >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title text-info font-weight-bold" id="createProjectModalLabel">Create Your Project</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="project-creation--loader-container" style="display: none;">
                        <div class="loader"></div>
                    </div>
                    <div class="modal-body">
                        <form id="project-form">
                            <input type="hidden" id="_csrf" name="_csrf" value="<%=locals.csrf%>">
                            <div class="mb-3 project-field--name">
                                <label for="project-name" class="form-label text-info">Project Name</label>
                                <input type="text" class="form-control" id="project-name" placeholder="Enter project name">
                            </div>
                            <div class="mb-3 project-field--description">
                                <label for="project-description" class="form-label text-info">Description</label>
                                <textarea class="form-control" id="project-description" rows="3" placeholder="Enter project description"></textarea>
                            </div>
                            <div class="mb-3 project-field--deadline">
                                <label for="project-deadline" class="form-label text-info">Deadline</label>
                                <input type="date" class="form-control" id="project-deadline">
                            </div>
                            <div class="modal-footer">
                                <button type="reset" id="form-project--button-reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="save-changes">Save </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        
        <main class="row mt-4" id="project-list__container">
      
            <div class="col-md-3">
                <div class="card project-card add-project-card" data-bs-toggle="modal" data-bs-target="#createProjectModal">
                    <div class="card-body">+</div>
                </div>
            </div>
      
        </main>


    <%- include("../section-template/bottom-section__template"); %>
    
  </div>
</main>
    
<%- include('../includes/footer'); %>